<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Dynamic Form Action Test</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Audiowide&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  </head>

  <body style="padding-top: 80px; background-image: url('/images/pexels-cookiecutter-1148820.jpg'); background-size: cover;">
    <section>
      <div class="container px-3 py-4 my-4 bg-dark bg-opacity-75 text-light rounded">
        <h3 class="text-center mb-4">Test Dynamic Edit & Delete</h3>

        <!-- Inputan ID artikel -->
        <input id="articleIdInput" class="form-control text-center mb-3" placeholder="Masukkan ID artikel" required>

        <!-- Tombol Edit -->
        <form id="editForm" action="/deletepost/" method="GET" style="display:inline;">
          <button type="submit" class="btn btn-primary">Edit</button>
        </form>

        <!-- Tombol Delete -->
        <form id="deleteForm" action="/deletepost/?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit" class="btn btn-danger" onclick="return confirm('Yakin hapus artikel ini?')">Delete</button>
        </form>

        <p class="mt-4 text-center small text-secondary">
          URL Edit & Delete akan berubah otomatis berdasarkan ID yang kamu ketik di atas.
        </p>
      </div>
    </section>

    <script>
      const input = document.getElementById('articleIdInput');
      const editForm = document.getElementById('editForm');
      const deleteForm = document.getElementById('deleteForm');

      input.addEventListener('input', () => {
        const id = input.value.trim();

        // Update form action secara dinamis
        editForm.action = id ? `/editpost/${id}` : '/editpost/';
        deleteForm.action = id ? `/deletepost/${id}?_method=DELETE` : '/deletepost/?_method=DELETE';
      });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
